defutf8 on
defscrollback 8192
autodetach on
startup_message off
sessionname top
hardcopydir ~/.screen
hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%? %{r}(%{W}%n%f*%t%?[%u]%?%{r}) %{w}%?%+Lw%?%= %{g}][%{B} %y:%m:%d:%{W}%c:%s %{g}]'
nethack on
zombie 

screen -t local screen -S local -m -c $HOME/.screenrc.local
screen -t sudo sudo -i
screen -t clouds screen -S clouds -m -c $HOME/.screenrc.local
screen -t salt screen -S salt -m -c $HOME/.screenrc.local
screen -t logstash screen -S logstash -m -c $HOME/.screenrc.local
screen -t jankins screen -S jankins -m -c $HOME/.screenrc.local
screen
screen
select 0
